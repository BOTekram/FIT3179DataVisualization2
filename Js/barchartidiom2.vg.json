{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Horizontal Bar Chart: Energy Production by Energy Type in 2020",
  "width": 800,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/BOTekram/FIT3179DataVisualization2/main/data/complete_renewable_energy_dataset.csv",
    "format": {
      "type": "csv"
    }
  },
  "params": [
    {
      "name": "selectedCountry",
      "value": "All",  
      "bind": {
        "input": "select",
        "options": ["All", "USA", "Australia", "Canada", "China", "Japan"],
        "labels": ["All", "USA", "Australia", "Canada", "China", "Japan"],
        "name": "Select Country"
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.Year == 2020"
    },
    {
      "filter": "(selectedCountry == 'All') || (datum.Country == selectedCountry)"
    },
    {
      "aggregate": [{"op": "sum", "field": "Production (GWh)", "as": "Total Production"}],
      "groupby": ["Energy Type"]
    }
  ],
  "mark": {
    "type": "bar"
  },
  "encoding": {
    "x": {
      "field": "Total Production", 
      "type": "quantitative",
      "axis": {"title": "Total Production (GWh)"}
    },
    "y": {
      "field": "Energy Type", 
      "type": "nominal",
      "axis": {"title": "Energy Type"}
    },
    "color": {
      "field": "Energy Type", 
      "type": "nominal",
      "legend": {"title": "Energy Type"}
    },
    "tooltip": [
      {"field": "Energy Type", "type": "nominal", "title": "Energy Type"},
      {"field": "Total Production", "type": "quantitative", "title": "Total Production (GWh)", "format": ".2f"}
    ]
  }, 
  "view": {"stroke": null}
}
