{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": "Global Renewable Energy Consumption (2020)",
  "projection": {"type": "equirectangular"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/BOTekram/FIT3179DataVisualization2/main/data/ne_110m.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "darkgray"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/BOTekram/FIT3179DataVisualization2/main/data/API_EG_FEC_RNEW_ZS_DS2_en_csv_v2_1722.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {
          "filter": "datum.Year == 2020"
        }
      ],
      "mark": {
        "type": "geoshape"
      },
      "encoding": {
        "color": {
          "field": "Renewable_Energy_Consumption",
          "type": "quantitative",
          "title": "Energy Consumption",
          "scale": {
            "domain": [0, 100],
            "scheme": "greens"
          }
        },
        "tooltip": [
          {"field": "Country_Code", "type": "nominal", "title": "Country Code"},
          {"field": "Year", "type": "ordinal"},
          {
            "field": "Renewable_Energy_Consumption",
            "type": "quantitative",
            "title": "Energy Consumption (GWh)"
          }
        ]
      }
    }
  ]
}