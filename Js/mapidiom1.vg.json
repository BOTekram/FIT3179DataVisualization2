{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/BOTekram/FIT3179DataVisualization2/main/data/ne_110m.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "projection": {"type": "equalEarth"},
  "params": [
    {
      "name": "intensity",
      "value":0,  
      "bind": {
        "input": "range",  
        "min": 0, 
        "max": 100,  
        "step": 1,  
        "name": "Adjust Minimum Intensity: " 
      }
    }
  ],
  "layer": [
    {
      "transform": [
        {"calculate": "'Data is not available in ' + datum.properties.NAME", "as": "note"}
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {
        "tooltip": {
          "field": "note",  
          "type": "nominal"
        }
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/BOTekram/FIT3179DataVisualization2/main/data/API_EG_FEC_RNEW_ZS_DS2_en_csv_v2_1722.csv"
            },
            "key": "Country_Name",
            "fields": ["Renewable_Energy_Consumption", "Country_Name", "Year"]
          }
        },
        {
          "filter": "datum.Year == 2020"
        },
        {
          "filter": "datum.Renewable_Energy_Consumption >= intensity" 
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "Renewable_Energy_Consumption",
          "title": "Intensity Bar (%)",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1, 40, 80, 100],
            "range": ["#e5f5e0", "#a1d99b", "#74c476", "#31a354", "#006d2c"]
          }
        },
        "tooltip": [
          {"field": "Country_Name", "type": "nominal", "title": "Country"},
          {
            "field": "Renewable_Energy_Consumption",
            "type": "quantitative",
            "title": "Renewable Energy Consumption (%)",
            "format": ".2f"
          },
          {"field": "Year", "type": "ordinal", "title": "Year"}  
        ]
      }
    }
  ]
}
